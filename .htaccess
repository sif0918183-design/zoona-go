# .htaccess
RewriteEngine On

# إجبار HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# تعريف MIME types للتطبيق
AddType application/manifest+json .webmanifest
AddType application/json .json

# تعريف Service Worker
AddType application/javascript .js
AddType text/javascript .js

# تحسين Caching
<FilesMatch "\.(json|webmanifest)$">
  Header set Cache-Control "public, max-age=86400, immutable"
</FilesMatch>

<FilesMatch "\.(js|css)$">
  Header set Cache-Control "public, max-age=604800"
</FilesMatch>

<FilesMatch "\.(png|jpg|jpeg|gif|ico|svg)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Service Worker Scope
Header set Service-Worker-Allowed "/"

# ضبط سياسة الأمان
Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://cdnjs.cloudflare.com https://unpkg.com https://www.gstatic.com https://fonts.googleapis.com; style-src 'self' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://zsmlyiygjagmhnglrhoa.supabase.co https://fcm.googleapis.com;"

# تمكين CORS
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type"